
<div id="board_<%= board.id %>">

<div class="jumbotron container">
    
<p>
  <strong>Date time:</strong>
  <%= board.date_time %>
</p>

<p>
  <strong>Campaign:</strong>
  <%= board.campaign.campaign_name %>
</p>

<p>
  <strong>Brand:</strong>
  <%= board.brand.brand_name %>
</p>

<p>
  <strong>Country:</strong>
  <%= board.country.country_name %>
</p>

<p>
  <strong>Activity:</strong>
  <%= board.activity.activity_name %>
</p>

<p>
  <strong>End time:</strong>
  <%= board.end_time %>
</p>

<p>
  <strong>Minute:</strong>
  <%= board.sum_time %>
</p>




	<div class="btn-group">
		<!-- Button trigger modal -->
	<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal_<%= board.id %>">
	  Edit
	</button>
	<%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class:'btn btn-primary btn-lg' %>

	</div>
</div>



	<%= form_for(board, :method => :put, remote: true) do |f| %>

	<!-- Modal -->
	<div class="modal fade" id="myModal_<%= board.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title" id="myModalLabel">Edit</h4>
	      </div>
	      <div class="modal-body">
	        
	        
	        
      <div class="field">
    <%= f.label :date_time %><br>
    <%= f.datetime_select :date_time, class:'board_datetime' %>
  </div>
  
  
  <div class="field">
       Campaign <br>                    
      <%= f.collection_select :campaign_id, Campaign.all, :id, :campaign_name, {prompt: "Select Campaign"},{class: "form-control board_campaign"} %>
  </div>

   <div class="field">
       Brand <br>                    
      <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, {prompt: "Select Brand"},{class: "form-control board_brand"} %>
  </div>
  
  <div class="field">
       Country <br>                    
      <%= f.collection_select :country_id, Country.all, :id, :country_name, {prompt: "Select Country"},{class: "form-control board_country"} %>
  </div>
 
 <div class="field">
       Activity <br>                    
      <%= f.collection_select :activity_id, Activity.all, :id, :activity_name, {prompt: "Select Activity"},{class: "form-control board_activity"} %>
  </div>
 
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time, class:'board_endtime' %>
  </div>
  <div class="field" >
<br>
    <%= f.text_field :sum_time, class:'board_sumtime' , class:'invisible' %>
  </div>
   
   
   
   
	        
	        
	        
	      </div>
	      <div class="modal-footer">
	             <button type="button" class="btn btn-primary"><%= f.submit %></button>

	      </div>
	    </div>
	  </div>
	</div>


<% end %>

</div>