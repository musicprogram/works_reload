<%= form_for(@board) do |f| %>
  <% if @board.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@board.errors.count, "error") %> prohibited this board from being saved:</h2>

      <ul>
      <% @board.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date_time %><br>
    <%= f.datetime_select :date_time %>
  </div>
  
  
  <div class="field">
       Campaign <br>                    
      <%= f.collection_select :campaign_id, Campaign.all, :id, :campaign_name, {prompt: "Select Campaign"},{class: "form-control"} %>
  </div>

   <div class="field">
       Brand <br>                    
      <%= f.collection_select :brand_id, Brand.all, :id, :brand_name, {prompt: "Select Brand"},{class: "form-control"} %>
  </div>
  
  <div class="field">
       Country <br>                    
      <%= f.collection_select :country_id, Country.all, :id, :country_name, {prompt: "Select Country"},{class: "form-control"} %>
  </div>
 
 <div class="field">
       Activity <br>                    
      <%= f.collection_select :activity_id, Activity.all, :id, :activity_name, {prompt: "Select Activity"},{class: "form-control"} %>
  </div>
 
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.datetime_select :end_time %>
  </div>
  <div class="field">
    <%= f.label :sum_time %><br>
    <%= f.text_field :sum_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
